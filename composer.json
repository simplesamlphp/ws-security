{
    "name": "simplesamlphp/ws-security",
    "description": "WS-Security PHP library",
    "license": "LGPL-2.1-or-later",
    "authors": [
        {
            "name": "Tim van Dijen",
            "email": "tvdijen@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-dom": "*",
        "ext-spl": "*",

        "simplesamlphp/assert": "^1.0",
        "simplesamlphp/saml2": "^5@dev",
        "simplesamlphp/xml-security": "^1.7",
        "simplesamlphp/xml-common": "^1.16"
    },
    "require-dev": {
        "simplesamlphp/simplesamlphp-test-framework": "^1.5"
    },
    "autoload": {
        "psr-4": {
            "SimpleSAML\\WSSecurity\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SimpleSAML\\Test\\WSSecurity\\": "tests/WSSecurity/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "v1.0.x-dev"
        }
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpstan/extension-installer": true,
            "simplesamlphp/composer-xmlprovider-installer": true
        }
    }
}
