{
    "name": "tvdijen/ws-security",
    "description": "WS-Security PHP library",
    "license": "LGPL-2.1-or-later",
    "authors": [
        {
            "name": "Tim van Dijen",
            "email": "tvdijen@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "ext-dom": "*",
        "ext-spl": "*",

        "simplesamlphp/assert": "^1.0.4",
        "simplesamlphp/saml2": "dev-master",
        "simplesamlphp/xml-common": "^1.12"
    },
    "require-dev": {
        "simplesamlphp/simplesamlphp-test-framework": "^1.5.5"
    },
    "autoload": {
        "psr-4": {
            "SimpleSAML\\WSSecurity\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SimpleSAML\\Test\\WSSecurity\\": "tests/WSSecurity/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "v1.0.x-dev"
        }
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    }
}
