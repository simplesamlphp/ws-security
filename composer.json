{
    "name": "tvdijen/ws-security",
    "description": "WS-Security PHP library",
    "license": "LGPL-2.1-or-later",
    "authors": [
        {
            "name": "Tim van Dijen",
            "email": "tvdijen@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "ext-dom": "*",
        "ext-spl": "*",

        "psr/log": "^2.0 || ^3.0",
        "simplesamlphp/xml-security": "^1.6.0",
        "simplesamlphp/xml-soap": "^1.0.1",
        "simplesamlphp/assert": "^1.0.2"
    },
    "require-dev": {
        "simplesamlphp/simplesamlphp-test-framework": "^1.4.1"
    },
    "autoload": {
        "psr-4": {
            "SimpleSAML\\WSSecurity\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SimpleSAML\\Test\\WSSecurity\\": "tests/WSSecurity/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "v1.0.x-dev"
        }
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    }
}
