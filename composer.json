{
    "name": "simplesamlphp/ws-security",
    "description": "WS-Security PHP library",
    "license": "LGPL-2.1-or-later",
    "type": "simplesamlphp-xmlprovider",
    "authors": [
        {
            "name": "Tim van Dijen",
            "email": "tvdijen@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "ext-dom": "*",
        "ext-spl": "*",

        "simplesamlphp/assert": "~1.9.1",
        "simplesamlphp/saml2": "dev-feature/xsd-types",
        "simplesamlphp/xml-common": "~2.2.0",
        "simplesamlphp/xml-security": "~2.0.5",
        "simplesamlphp/xml-soap": "~2.0.5"
    },
    "require-dev": {
        "simplesamlphp/simplesamlphp-test-framework": "~1.10.3"
    },
    "autoload": {
        "psr-4": {
            "SimpleSAML\\WSSecurity\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SimpleSAML\\Test\\WSSecurity\\": "tests/WSSecurity/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "v1.1.x-dev"
        }
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpstan/extension-installer": true,
            "simplesamlphp/composer-xmlprovider-installer": true
        }
    }
}
